<resources xmlns:tools="http://schemas.android.com/tools">
    <bool name="isDarkMode">false</bool>

    <!-- Base application theme. -->
    <style name="Theme.Packup.Activity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <!-- Status bar color. -->
        <item name="colorError">@color/color_error_background</item>
        <item name="fontFamily">@font/inter</item>
        <item name="colorOnSurface">@color/color_black</item>

        <item name="colorSurface">@color/color_white</item>
        <!--status bar-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- *** Theme Semantic Colors *** -->

        <item name="packupColorPrimaryDarker">@color/packup_communication_shade_30</item>
        <item name="packupColorPrimaryLight">@color/packup_communication_tint_20</item>
        <item name="packupColorPrimaryLighter">@color/packup_communication_tint_40</item>

        <!-- *** Base Semantic Colors *** -->

        <!--Backgrounds-->
        <item name="packupBackgroundColor">@color/packup_white</item>
        <item name="packupBackgroundPressedColor">@color/packup_gray_100</item>
        <item name="packupBackgroundPrimaryColor">?attr/colorPrimary</item>
        <item name="packupBackgroundSecondaryColor">@color/packup_gray_900</item>
        <item name="packupBackgroundSecondaryPressedColor">@color/packup_gray_500</item>

        <!--Backgrounds, Transparent-->
        <item name="packupBackgroundSecondary20Color">#33000000</item>

        <!--Foregrounds-->
        <item name="packupForegroundColor">@color/packup_gray_900</item>
        <item name="packupForegroundSelectedColor">?attr/colorPrimary</item>
        <item name="packupForegroundSecondaryColor">@color/packup_gray_500</item>
        <item name="packupForegroundSecondaryIconColor">@color/packup_gray_400</item>
        <item name="packupForegroundOnPrimaryColor">@color/packup_white</item>
        <item name="packupForegroundOnSecondaryColor">@color/packup_white</item>
        <item name="packupDividerColor">@color/packup_gray_100</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textCursorDrawable">@drawable/primary_cursor</item>


        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/activity_trans</item>
        <item name="android:windowExitTransition">@transition/activity_trans</item>

    </style>

    <style name="Theme.Packup.Activity.Immersive" parent="Theme.Packup.Activity">
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="Theme.Packup.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_day</item>
        <item name="colorSurface">@color/color_white</item>
        <!--Same as Theme.Packup-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    

    <color name="colorText">#8A000000</color>
    <color name="windowBackgroundColor">@color/color_white</color>

    <color name="activityStatusBarColor">@color/colorPrimary</color>

    <color name="navBarBackgroundColor">@color/color_white</color>

    <color name="shimmerBackground">@color/color_primary_400_opaque</color>

    <drawable name="defaultButtonBackground">@drawable/button_background_default_day</drawable>
    <color name="pkuColor">#7e0111</color>
    <color name="pkuBackground">#7e0111</color>
    <drawable name="packupIcon">@drawable/packup_large_alpha_512</drawable>
    <drawable name="primaryTextFieldBackground">@drawable/textfield_background_drawable_day</drawable>
    <color name="primaryTextFieldHintColor">@color/color_surface_neutral</color>
    <drawable name="primaryButtonBackground">@drawable/button_background_primary_day</drawable>

    <color name="colorSurfaceElevated">@color/color_surface_neutral_light_elevation_01dp</color>
    <color name="colorSurfaceElevated2">@color/color_surface_neutral_light_elevation_02dp</color>

    <drawable name="starButtonBackground">@drawable/button_background_round_ripple_star_day</drawable>
    <drawable name="addIcon24">@drawable/ic_packup_add_24_regular_white</drawable>

    <color name="colorToolbarButton">@color/color_primary_500</color>

    <color name="infoBoundBorderColor">#f1f3f4</color>
    <color name="rippleColorOnActionBar">#3252C5</color>
    <color name="messagePillRed">#E4231B</color>
    <color name="messagePillOrange">#E88205</color>
    <color name="messagePillPurple">#562EB3</color>
    <color name="messagePillGreen">#6DB065</color>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_container</item>
    </style>
    <color name="bottomSheetBackgroundColor">@color/color_white</color>
    <color name="messageBarBackgroundColor_Normal">@color/color_surface_neutral_dark_elevation_16dp</color>
    <color name="messageBarButtonRippleColor">#7a7a7a</color>

    <color name="itemBackgroundRippleColor">@color/color_surface_neutral_light_elevation_24dp</color>
    <color name="cursorColorOnActionBar">@color/color_white</color>

    <color name="fragmentBackground">@color/color_surface_neutral_light_elevation_01dp</color>
    <color name="itemSeparatorColor">@color/color_surface_neutral_light_elevation_04dp</color>
    <color name="itemBackgroundColor">@color/color_white</color>
    <color name="starColor">#F6CD3A</color>

    <color name="colorVibrant">@color/color_vibrant_400</color>
    <color name="colorPrimary">@color/color_primary_400</color>
    <color name="textFieldBackground">@color/color_surface_neutral_light_elevation_01dp</color>

    <color name="colorHeroText">@color/color_black</color>

    <color name="datePillBackgroundColor">@color/color_white</color>
    <color name="gridColor">#d3e2f9</color>


    <color name="eventAxisColor">@color/color_surface_neutral_light_elevation_01dp</color>
    <color name="eventBackgroundColor">@color/color_white</color>
    <color name="eventTextColor">#303C67</color>
    <color name="examBackgroundColor">#F8EED1</color>
    <color name="examTextColor">#603408</color>



</resources>