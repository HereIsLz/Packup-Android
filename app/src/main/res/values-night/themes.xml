<resources xmlns:tools="http://schemas.android.com/tools">

    <bool name="isDarkMode">true</bool>

    <!-- Base application theme. -->
    <style name="Theme.Packup.Activity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_400</item>
        <item name="colorPrimaryVariant">@color/color_primary_400</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary_400</item>
        <item name="colorSecondaryVariant">@color/color_primary_400</item>
        <item name="colorOnSecondary">@color/color_black</item>

        <item name="colorError">@color/color_error_background</item>
        <item name="fontFamily">@font/inter</item>
        <item name="colorOnSurface">@color/color_surface_neutral_light_elevation_08dp</item>

        <item name="colorSurface">@color/color_surface_neutral_dark_elevation_01dp</item>
        <!--        Status Bar-->
        <item name="android:statusBarColor">@color/color_surface_neutral_dark_elevation_01dp</item>
        <item name="android:windowBackground">@color/color_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navBarBackgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.Packup.Activity.Immersive" parent="Theme.Packup.Activity">
        <item name="android:statusBarColor">@color/color_black</item>
        <item name="android:windowBackground">@color/color_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/color_black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Packup.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_night</item>
        <item name="colorSurface">@color/color_black</item>
        <!-- Same as Theme.Packup -->
        <item name="colorPrimary">@color/color_primary_400</item>
        <item name="colorPrimaryVariant">@color/color_primary_400</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorSecondary">@color/color_primary_400</item>
        <item name="colorSecondaryVariant">@color/color_primary_400</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="android:statusBarColor">@color/color_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/color_black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>
    <color name="colorText">#8Affffff</color>
    <color name="windowBackgroundColor">@color/color_black</color>
    <color name="navBarBackgroundColor">#131313</color>
    <color name="activityStatusBarColor">@color/color_surface_neutral_dark_elevation_01dp</color>

    <color name="shimmerBackground">@color/color_primary_400_opaque</color>
    <color name="pkuColor">@color/color_white</color>
    <color name="pkuBackground">@color/color_black</color>
    <drawable name="packupIcon">@drawable/packup_large_alpha_512</drawable>
    <drawable name="primaryTextFieldBackground">@drawable/textfield_background_drawable_night</drawable>
    <color name="primaryTextFieldHintColor">@color/color_surface_neutral</color>
    <drawable name="primaryButtonBackground">@drawable/button_background_primary_night</drawable>
    <color name="colorSurfaceElevated">@color/color_surface_neutral_light_elevation_02dp</color>
    <color name="colorSurfaceElevated2">@color/color_surface_neutral_dark_elevation_03dp</color>


    <drawable name="starButtonBackground">@drawable/button_background_round_ripple_star_night</drawable>
    <drawable name="addIcon24">@drawable/ic_packup_add_24_regular_black</drawable>

    <color name="colorToolbarButton">@color/color_surface_neutral_dark_elevation_08dp</color>

    <color name="infoBoundBorderColor">@color/color_surface_neutral_dark_elevation_16dp</color>
    <color name="rippleColorOnActionBar">@color/color_surface_neutral_dark_elevation_16dp</color>

    <color name="messagePillRed">#B3302C</color>
    <color name="messagePillOrange">#B16725</color>
    <color name="messagePillPurple">#48327A</color>
    <color name="messagePillGreen">#457C46</color>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_container</item>
    </style>
    <color name="bottomSheetBackgroundColor">@color/color_surface_neutral_dark_elevation_12dp</color>
    <color name="messageBarBackgroundColor_Normal">@color/color_surface_neutral_dark_elevation_08dp</color>
    <color name="messageBarButtonRippleColor">#6a6a6a</color>

    <color name="itemBackgroundRippleColor">@color/color_surface_neutral_dark_elevation_24dp</color>
</resources>