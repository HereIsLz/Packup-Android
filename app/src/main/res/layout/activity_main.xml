<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_activity_view_pager"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_activity_tool_bar_container"
        app:layout_constraintBottom_toTopOf="@id/main_activity_bottom_nav" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_activity_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/defaultNav"
        app:menu="@menu/main_nav"
        android:elevation="8dp"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_activity_tool_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetStart="0dp"
        android:elevation="8dp"
        android:background="@color/color_primary_400">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="?android:statusBarColor"
            android:animateLayoutChanges="true"
            android:paddingBottom="@dimen/toolbar_vertical_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/main_activity_toolbar_title"
                android:layout_marginHorizontal="@dimen/toolbar_horizontal_padding"
                android:layout_marginTop="@dimen/toolbar_vertical_padding"
                android:text="Deadline"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/main_activity_search_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/deadline_recycler_view_item_horizontal_padding"
                android:background="@drawable/button_background_round_ripple_surface_day"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_fluent_search_24_regular"
                android:tint="@color/color_white"
                app:layout_constraintBottom_toBottomOf="@id/main_activity_toolbar_title"
                app:layout_constraintEnd_toStartOf="@id/main_activity_filter_button"
                app:layout_constraintTop_toTopOf="@id/main_activity_toolbar_title" />

            <ImageButton
                android:id="@+id/main_activity_filter_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/deadline_recycler_view_item_horizontal_padding"
                android:background="@drawable/button_background_round_ripple_surface_day"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_fluent_filter_24_regular"
                android:tint="@color/color_white"
                app:layout_constraintBottom_toBottomOf="@id/main_activity_toolbar_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/main_activity_toolbar_title">

            </ImageButton>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_activity_deadline_filter_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/toolbar_horizontal_padding"
                android:layout_marginVertical="@dimen/toolbar_vertical_padding"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/main_activity_toolbar_title">

                <Button
                    android:id="@+id/main_activity_deadline_filter_dropper"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginVertical="0dp"
                    android:drawableEnd="@drawable/ic_fluent_chevron_down_20_regular"
                    android:drawableTint="@color/color_white"
                    android:drawablePadding="0dp"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textColor="@color/color_white"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>