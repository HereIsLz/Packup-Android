<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/deadline_recycler_view_item_vertical_padding"
    android:paddingHorizontal="@dimen/deadline_recycler_view_item_horizontal_padding">

    <TextView
        android:id="@+id/deadline_item_member_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:textSize="16sp"
        android:text="Lab4 内存机制"
        android:textStyle="bold"
        android:textColor="?colorOnSurface"/>

    <ImageView
        android:id="@+id/deadline_item_member_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/deadline_item_member_title"
        app:layout_constraintBottom_toBottomOf="@id/deadline_item_member_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fluent_star_24_selector"
        app:tint="@color/color_surface_neutral"/>


    <ImageView
        android:id="@+id/deadline_item_member_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/deadline_item_member_title"
        app:layout_constraintBottom_toBottomOf="@id/deadline_item_member_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fluent_checkbox_unchecked_24_selector"
        app:tint="@color/color_surface_neutral"/>



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/deadline_item_member_due_time"
        app:layout_constraintTop_toBottomOf="@id/deadline_item_member_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="@id/deadline_item_member_star"
        android:layout_marginTop="8dp"
        android:text="11 月 22 日，周日，23:59"
        android:fontFeatureSettings="tnum"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/deadline_item_member_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deadline_item_member_due_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deadline_item_member_course_pill"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="作业"
        android:fontFeatureSettings="tnum"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="4dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/button_background_primary_day"
        app:layout_constraintTop_toBottomOf="@id/deadline_item_member_due_time"
        app:layout_constraintStart_toStartOf="@id/deadline_item_member_due_time"
        android:id="@+id/deadline_item_member_course_pill"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="8dp"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/deadline_item_member_subject_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_fluent_eye_tracking_24_regular"
            app:tint="?colorSurface"/>
        <TextView
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/deadline_item_member_course_name"
            app:layout_constraintStart_toEndOf="@id/deadline_item_member_subject_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="计算视觉理论、模型与方法"
            android:textColor="?colorSurface"
            android:maxWidth="144dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/button_background_primary_day"
        app:layout_constraintTop_toBottomOf="@id/deadline_item_member_due_time"
        app:layout_constraintStart_toEndOf="@id/deadline_item_member_course_pill"
        android:layout_marginStart="8dp"
        android:id="@+id/deadline_item_member_property_pill"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="8dp"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/deadline_item_member_property_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_fluent_book_compass_24_regular"
            app:tint="?colorSurface"/>
        <TextView
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/deadline_item_member_property_name"
            app:layout_constraintStart_toEndOf="@id/deadline_item_member_property_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textColor="?colorSurface"
            android:maxWidth="144dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/button_background_primary_day"
        app:layout_constraintBottom_toBottomOf="@id/deadline_item_member_course_pill"
        app:layout_constraintTop_toTopOf="@id/deadline_item_member_course_pill"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/color_success_100"
        android:id="@+id/deadline_item_member_submission_pill"
        android:paddingHorizontal="4dp"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/deadline_item_member_submission_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_fluent_cloud_sync_complete_24_regular"
            app:tint="@color/color_success_500"/>
        <TextView
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/deadline_item_member_submission_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="已提交"
            android:textColor="@color/color_success_500"
            android:maxWidth="144dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/deadline_item_member_submission_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>