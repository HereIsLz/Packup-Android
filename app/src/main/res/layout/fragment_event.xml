<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.event.EventFragment"
    android:animateLayoutChanges="true"
    android:background="@color/eventBackgroundColor">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_begin="36dp"
        android:id="@+id/render_start_guideline"
        android:orientation="horizontal" />


    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:id="@+id/time_axis_container"
        android:background="@color/eventAxisColor">
    </LinearLayout>


    <View
        android:background="@color/activityStatusBarColor"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        android:layout_width="match_parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:id="@+id/events_recycler_view"
        app:layout_constraintStart_toEndOf="@id/time_axis_container"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>