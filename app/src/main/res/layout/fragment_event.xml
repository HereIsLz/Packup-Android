<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.event.EventFragment"
    android:animateLayoutChanges="true"
    android:background="@color/eventBackgroundColor">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_begin="36dp"
        android:id="@+id/render_start_guideline"
        android:orientation="horizontal" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:id="@+id/time_axis_container"
        android:background="@color/eventAxisColor">
    </LinearLayout>

    <View
        android:background="@color/activityStatusBarColor"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        android:layout_width="match_parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:id="@+id/events_recycler_view"
        app:layout_constraintStart_toEndOf="@id/time_axis_container"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/events_nthweek"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/render_start_guideline"
        app:layout_constraintEnd_toEndOf="@id/time_axis_container"
        app:layout_constraintStart_toStartOf="parent"
        android:text="12"
        android:fontFeatureSettings="tnum"
        android:gravity="center"
        android:textColor="@color/datePillBackgroundColor"
        android:textSize="@dimen/packup_caption"
        android:elevation="8dp"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatTextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFeatureSettings="tnum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/time_axis_container"
        android:textSize="@dimen/packup_overline"
        app:layout_constraintTop_toBottomOf="@id/render_start_guideline"
        android:id="@+id/time_begin"
        app:layout_constraintBottom_toBottomOf="@id/render_start_guideline"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:fontFeatureSettings="tnum"
        app:layout_constraintTop_toBottomOf="@id/time_begin"
        android:id="@+id/time1"
        app:layout_constraintEnd_toEndOf="@id/time3"
        app:layout_constraintBottom_toTopOf="@id/time2"
        android:textSize="@dimen/packup_overline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00"
        android:fontFeatureSettings="tnum"
        app:layout_constraintTop_toBottomOf="@id/time1"
        android:id="@+id/time2"
        app:layout_constraintEnd_toEndOf="@id/time3"
        app:layout_constraintBottom_toTopOf="@id/time3"
        android:textSize="@dimen/packup_overline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:fontFeatureSettings="tnum"
        app:layout_constraintTop_toBottomOf="@id/time2"
        android:id="@+id/time3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/time_axis_container"
        app:layout_constraintBottom_toTopOf="@id/time4"
        android:textSize="@dimen/packup_overline"
        />
