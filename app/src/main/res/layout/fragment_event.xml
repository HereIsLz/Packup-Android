        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/time_axis_container"
        android:textSize="@dimen/packup_overline"
        app:layout_constraintTop_toBottomOf="@id/time8"
        android:id="@+id/time9"
        app:layout_constraintBottom_toTopOf="@id/time10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:00"
        android:fontFeatureSettings="tnum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/time_axis_container"
        android:textSize="@dimen/packup_overline"
